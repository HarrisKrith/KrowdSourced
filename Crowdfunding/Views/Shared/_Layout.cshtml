@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>

<html lang="en">
<body style="background-color: #808080;">
    <head>
        <style>
            #footer {
                position: fixed;
                padding: 10px 10px 0px 10px;
                bottom: 0;
                width: 100%;
                /* Height of the footer*/
                height: 40px;
                background-color: #808080;
            }

            body {
                font-family: Arial, Helvetica, sans-serif;
                font-size: 20px;
            }

            #myBtn {
                display: none;
                position: fixed;
                bottom: 20px;
                right: 30px;
                z-index: 99;
                font-size: 18px;
                border: none;
                outline: none;
                background-color: #555;
                color: white;
                cursor: pointer;
                padding: 15px;
                border-radius: 4px;
            }

                #myBtn:hover {
                    background-color: red;
                }
        </style>

        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>KrowdSourced</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
        <link href="~/css/Site.css" rel="stylesheet">

    </head>



    <header>
        <link rel="icon" href="~/images/SiteImages/browser.png" />
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-secondary border-bottom box-shadow mb-3">

            <div class="container">

                <!-- Title or/and logo-->
                <a class="navbar-brand" asp-area="KrOwdSourced" asp-controller="Home" asp-action="Index">
                    <img src="~/images/SiteImages/logo6.png" alt="KrOwdSourced" width="160px" height="45px">
                </a>

                <!--nav bar BUTTONS-->
                <div class="collapse navbar-collapse" id="navbarsExample09">
                    <ul class="navbar-nav mr-auto">

                        <li class="nav-item active">
                            <a class="nav-link text-dark" asp-area="KrOwdSourced" asp-controller="Project" asp-action="Trends"><strong>Trends</strong></a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link text-dark" asp-area="KrOwdSourced" asp-controller="Project" asp-action="AllProjects"><strong>Projects</strong></a>
                        </li>
                    </ul>

                    <!--Searh bar-->
                    <div>
                        <form method="get" class="form-inline my-2 my-md-0" asp-area="KrOwdSourced" asp-controller="Project" asp-action="Search">
                            <input style="width: 300px;" type="search" placeholder="Search" name="searchType" class="form-control" />
                        </form>
                    </div>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <br />

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()

            <!--Scroll to the top BUTTON / look bottom for link-->
            <button onclick="topFunction()" id="myBtn" title="Go to top">To the Top!</button>
        </main>
    </div>

    <br />

    <div id="footer">
        &copy; 2020 - KrowdSourced
        <a class="text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> /
        <a class="text-dark" asp-area="" asp-controller="Home" asp-action="AboutUs"> AboutUs </a>/
        <a class="text-dark" asp-area="" asp-controller="Home" asp-action="Contact"> Contact</a> /
        <a class="text-dark" asp-area="" asp-controller="Home" asp-action="AgileManifesto"> Agile Manifesto tribute</a>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

    <!--https://www.w3schools.com/howto/tryit.asp?filename=tryhow_js_scroll_to_top-->
    <script>
        //Get the button
        var mybutton = document.getElementById("myBtn");

        // When the user scrolls down 20px from the top of the document, show the button
        window.onscroll = function () { scrollFunction() };

        function scrollFunction() {
            if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
                mybutton.style.display = "block";
            } else {
                mybutton.style.display = "none";
            }
        }

        // When the user clicks on the button, scroll to the top of the document
        function topFunction() {
            document.body.scrollTop = 0;
            document.documentElement.scrollTop = 0;
        }
    </script>

    @RenderSection("Scripts", required: false)

</body>
</html>

